<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="15dp"
    android:background="@drawable/shape_titlebar"
    android:paddingBottom="18dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/nav_header_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <!--头像-->
        <com.example.a21516.ceshi_jiguang.view.CircleImageView
            android:id="@+id/nav_header_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/icon_user" />
        <!--名字-->
        <TextView
            android:id="@+id/nav_header_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:textColor="@color/white"
            android:text="用户名字"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="18sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/nav_header_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"/>
</LinearLayout>