<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="48dp"
        android:layout_height="48dp">
        <com.example.a21516.ceshi_jiguang.view.CircleImageView
            android:id="@+id/item_main_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_user" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="15dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_main_username"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:text="八怪不姓丑"/>
            <TextView
                android:id="@+id/item_main_content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="#66000000"
                android:layout_gravity="center_vertical"
                android:text="用户1：今天天气不错.."/>
        </LinearLayout>
            <TextView
                android:id="@+id/item_main_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#66000000"
                android:textSize="12sp"
                android:text="下午 4:20"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/item_main_infotime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#66000000"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="下午 4:20"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/item_main_time"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/item_main_bt"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:background="@drawable/shape_button_lines"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="添加"/>
    </RelativeLayout>
</LinearLayout>