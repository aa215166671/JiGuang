<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_shape_start</item>
        <item name="colorPrimaryDark">@color/color_shape_start</item>
        <item name="colorAccent">@color/color_shape_end</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:listDivider">@drawable/list_divider</item>
    </style>

    <!-- 头像操作. -->
    <style name="dialog_animal"
        parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ActionDialogStyle" parent="@android:style/Theme.Dialog"></style>
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog"></style>
</resources>
